<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.cjgreen.spring.dao.BoardDao">
  <select id="getBoardList" resultType="kr.cjgreen.spring.vo.BoardVo">
    select * from board
    where isDel = 'N'
  </select>
  <select id="getBoard" resultType="kr.cjgreen.spring.vo.BoardVo">
    select * from board where num = #{num}
  </select>
  <update id="increaseViews">
  	update board
		set
			views = views + 1
		where
			num = #{num};
  </update>
  <insert id="registerBoard">
  	insert into board(title, writer, contents)
  	values(#{board.title},#{board.writer},#{board.contents})
  </insert>
  <update id="updateBoard">
  update board
  	set
  		title = #{board.title},
  		contents = #{board.contents}
  	where
  		num = #{board.num}
  </update>
  <update id="deleteBoard">
  update board
  	set
  		isDel = 'Y',	
  		delDate = now()
  	where
  		num = #{board.num}
  </update>
</mapper>
